{
  "name": "@bullistic-hq/bullistic-candy-machine",
  "version": "0.0.41",
  "description": "Client SDK for Bullistic Candy Machine program.",
  "repository": "https://github.com/bullistic-hq/bullistic-candy-machine",
  "license": "UNLICENSED",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "publishConfig": {
    "@bullistic-hq:registry": "https://npm.pkg.github.com"
  },
  "scripts": {
    "prepare": "husky install",
    "prettier": "prettier --check \"src/**/*.ts\"",
    "eslint": "eslint --cache 'src/**/*.ts'",
    "lint": "yarn prettier --write && yarn eslint --fix",
    "build-program": "anchor build -- --features \"use-test-anti-bot-authority\"",
    "tsc": "tsc",
    "build-sdk": "tsc -P tsconfig.build.json && tsc-alias -p tsconfig.build.json",
    "build": "yarn build-program && ./scripts/setup-idl.sh && yarn build-sdk",
    "setup": "yarn build && cp artifacts/mpl_token_metadata.so target/deploy && yarn generate-merkle-allowlist-config",
    "test-program": "RUST_LOG=error cargo +1.66.1 test-bpf --features \"use-test-anti-bot-authority\" --",
    "test-program-debug": "RUST_BACKTRACE=1 cargo +1.66.1 test-bpf --features \"use-test-anti-bot-authority\" -- --nocapture",
    "test-unit": "jest src/tests/unit/*.test.ts",
    "test-cli": "./programs/bullistic-sugar/script/sugar-cli-test.sh",
    "test-local-spl": "yarn build-program && anchor test spl --skip-build",
    "test-local-merkle": "yarn build-program && anchor test merkle --skip-build",
    "test-local": "yarn test-local-spl && yarn test-local-merkle",
    "test-sdk": "jest src/tests/*.test.ts",
    "test-sdk-debug": "DEBUG=true yarn test-sdk",
    "test": "yarn test-unit && yarn test-program && yarn test-local",
    "sugar": "cd programs/bullistic-sugar && cargo run",
    "deploy-program": "./scripts/deploy-program.sh",
    "create-candy-machine": "./programs/bullistic-sugar/script/sugar-create-candy.sh",
    "estimate-proof-sizes": "ts-node -r tsconfig-paths/register src/scripts/estimateProofSizes.ts",
    "print-candy-machine": "ts-node -r tsconfig-paths/register src/scripts/printCandyMachineState.ts",
    "upload-candy-machine": "ts-node -r tsconfig-paths/register src/scripts/uploadCandyMachine.ts",
    "generate-spl-allowlist-config": "ts-node -r tsconfig-paths/register src/scripts/generateSplAllowlistConfig.ts",
    "generate-merkle-allowlist-config": "ts-node -r tsconfig-paths/register src/scripts/generateMerkleAllowlistConfig.ts",
    "update-create-config-times": "ts-node -r tsconfig-paths/register src/scripts/updateCreateConfigTimes.ts",
    "downshift-create-assets-indexes": "ts-node -r tsconfig-paths/register src/scripts/downshiftCreateAssetsIndex.ts",
    "set-create-assets-indexes": "ts-node -r tsconfig-paths/register src/scripts/setCreateAssetIndexes.ts",
    "validate-create-assets": "ts-node -r tsconfig-paths/register src/scripts/validateCreateAssets.ts",
    "modify-program-idl": "ts-node -r tsconfig-paths/register -T src/scripts/modifyProgramIdl.ts",
    "lint-program-idl": "ts-node -r tsconfig-paths/register src/scripts/lintProgramIdl.ts",
    "dump": "./scripts/solana-program-dump.sh"
  },
  "dependencies": {
    "@bullistic-hq/bullistic-program-shared": "0.0.65",
    "@solana/spl-token": "^0.3.7",
    "bn.js": "^5.2.0",
    "dayjs": "^1.11.5",
    "tiny-invariant": "^1.2.0"
  },
  "peerDependencies": {
    "@project-serum/anchor": "^0.26.0",
    "@solana/web3.js": "^1.73.0"
  },
  "devDependencies": {
    "@metaplex-foundation/mpl-token-metadata": "^2.7.0",
    "@project-serum/anchor": "^0.26.0",
    "@solana/web3.js": "^1.73.0",
    "@types/bluebird": "^3.5.36",
    "@types/bn.js": "^5.1.1",
    "@types/jest": "^29.0.0",
    "@types/node": "^18.7.14",
    "@types/yargs": "^17.0.12",
    "@typescript-eslint/eslint-plugin": "^5.4.0",
    "@typescript-eslint/parser": "^5.4.0",
    "axios": "^0.27.2",
    "bluebird": "^3.7.2",
    "esbuild-runner": "^2.2.1",
    "eslint": "^8.11.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "eslint-plugin-sort-keys-fix": "^1.1.2",
    "eslint-plugin-typescript-sort-keys": "^2.1.0",
    "husky": "^8.0.1",
    "jest": "27.5.1",
    "npm": "^8.19.2",
    "p-limit": "3.0.0",
    "prettier": "^2.7.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^28.0.8",
    "ts-node": "^10.9.1",
    "tsc-alias": "^1.7.0",
    "typescript": "^4.9.3",
    "yargs": "^17.5.1",
    "yesno": "^0.4.0"
  }
}
